{
    "compilerOptions": {
        "allowJs": true,
        "noEmit": true,
        "module": "es2020",
        "target": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "static",
        "node_modules",
    ],
    "typeAcquisition": {
        "enable": true
    }
}
