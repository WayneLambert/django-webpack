{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "outDir": "static/bundles/js",
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./assets/scripts/*"
    ],
    "exclude": [
        "node_modules",
        "static"
    ]
}
